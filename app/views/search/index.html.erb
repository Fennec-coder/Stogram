<div class="max-w-4xl mx-auto content-center">
  <%= form_tag(search_path, :method => "get") do %>
    <div class="input-group">
      <%= search_field_tag :search, params[:search], placeholder: "Type ", class: "form-controll" %>
      <div class="input-group-dtn">
        <%= button_tag "Search!", :class => "btn btn-info" %>
      </div>
    </div>
  <% end %>

  <br>

  <% unless @usernames.blank? %>
    <h3> By UserName </h3>
    <% @usernames.each do |u| %>
      <div class="flex">
        <%= link_to (image_tag u.avatar_url, class: "h-12 w-12 rounded-full"), user_path(u) %>
        <br><br><br>
        <h3 class="mx-2"><%= link_to "#{u.username}", user_path(u) %></h3>
      </div>
    <% end %>
    <br>
    <hr>
  <% end %>

  <% unless @names.blank? %>
    <h3> By Name </h3>
    <% @names.each do |u| %>
      <div class="flex">
        <%= link_to (image_tag u.avatar_url, class: "h-12 w-12 rounded-full"), user_path(u) %>
        <br><br><br>
        <h3 class="mx-2"><%= link_to "#{u.name}", user_path(u) %><br></h3>
      </div>
    <% end %>
    <br>
    <hr>
  <% end %>

  <% unless @emails.blank? %>
    <h3> By email </h3>
    <% @emails.each do |u| %>
      <div class="flex">
        <%= link_to (image_tag u.avatar_url, class: "h-12 w-12 rounded-full"), user_path(u) %>
        <br><br><br>
        <h3 class="mx-2"><%= link_to "#{u.email}", user_path(u) %><br></h3>
      </div>
    <% end %>
    <br>
    <hr>
  <% end %>

  <% unless @descriptions.blank? %>
    <h3> By description of post </h3>
    <div class="flex justify-center flex-wrap">
      <% @descriptions.each do |post| %>
        <%= render 'posts/post_card', post: post %>
      <% end %>
    </div>
  <% end %>
</div>
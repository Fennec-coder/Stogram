<div class="flex bg-white rounded-lg shadow-lg overflow-hidden mx-auto max-w-sm lg:max-w-lg">
  <div class="w-full p-8">
    <h2 class="font-bold self-center text-xl sm:text-3xl text-gray-800">Login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mt-4 text-left">
          <label class="mb-1 text-base tracking-wide text-gray-900"> E-Mail:</label>
            <div class="relative">
              <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
                <i class="fas fa-at text-blue-400"></i>
              </div>
              <input class="text-sm placeholder-gray-500 pl-10 pr-4 rounded-xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" autofocus="autofocus" autocomplete="email" type="email" value="" name="user[email]" id="user_email">
            </div>
        </div>
        <div class="mt-4 text-left">
          <label class="mb-4 text-base tracking-wide text-gray-900"> Password:</label>
            <div class="relative">
              <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
                <span>
                  <i class="fas fa-lock text-blue-400"></i>
                </span>
              </div>
              <input class="text-sm placeholder-gray-500 pl-10 pr-4 rounded-xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" autocomplete="current-password" type="password" name="user[password]" id="user_password">
            </div>
        </div>
        <div class="flex items-center justify-between mt-4">
          <div class="flex items-center">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "ml-2 text-sm text-gray-900"%>
              </div>
            <% end %>
          </div>
          <div class="text-sm">
            <a href="/users/password/new" class="font-medium text-indigo-600 hover:text-indigo-500">
              Forgot your password?
            </a>
          </div>
        </div>
        <div class="mt-8">
          <%= f.submit "Log in", class: "w-full px-4 py-3 bg-blue-600 text-gray-200 text-base font-semibold rounded hover:bg-blue-700" %>
        </div>
        <div class="mt-4 flex items-center justify-between">
          <span class="border-b w-1/5 md:w-1/4"></span>
            <a href="/users/sign_up" class="text-xs text-gray-500 uppercase">or sign up</a>
            <span class="border-b w-1/5 md:w-1/4"></span>
        </div>
    <% end %>
  </div>
</div>
<body class="bg-gray-200">
<div class="min-h-screen flex flex-col items-center justify-center">
  <div class="flex flex-col bg-white shadow-md my-4 px-8 sm:px-10 md:px-8 lg:px-16 py-8 rounded-3xl ">
    <div class="font-bold self-center text-xl sm:text-3xl text-gray-800">
      Sign up
    </div>
    <div class="mt-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="flex flex-col mb-5">
          <label class="mb-1 text-base tracking-wide text-gray-900"> Username:</label>
            <div class="relative">
              <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
                <i class="fas fa-user text-blue-500"></i>
              </div>
              <input class="text-sm placeholder-gray-500 pl-10 pr-4 rounded-xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" autofocus="autofocus" placeholder="Username" autocomplete="username" type="text" name="user[username]" id="user_username">
            </div>
        </div>
        <div class="flex flex-col mb-5">
          <label class="mb-1 text-base tracking-wide text-gray-900"> Name:</label>
            <div class="relative">
              <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
                <i class="fas fa-user text-blue-500"></i>
              </div>
              <input class="text-sm placeholder-gray-500 pl-10 pr-4 rounded-xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" autofocus="autofocus" placeholder="Name" autocomplete="name" type="text" name="user[name]" id="user_name">
            </div>
        </div>
        <div class="flex flex-col mb-5">
          <label class="mb-1 text-base tracking-wide text-gray-900"> E-Mail:</label>
            <div class="relative">
              <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
                <i class="fas fa-at text-blue-500"></i>
              </div>
              <input class="text-sm placeholder-gray-500 pl-10 pr-4 rounded-xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" autofocus="autofocus" placeholder="Email" autocomplete="email" type="email" value="" name="user[email]" id="user_email">
            </div>
        </div>
        <div class="flex flex-col mb-6">
          <label class="mb-1 text-base tracking-wide text-gray-900"> Password:</label>
            <div class="relative">
              <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
                <span>
                  <i class="fas fa-lock text-blue-500"></i>
                </span>
              </div>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <input class="text-sm placeholder-gray-500 pl-10 pr-4 rounded-xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" placeholder="Password" autocomplete="new-password" type="password" name="user[password]" id="user_password" aria-autocomplete="list">
            </div>
        </div>
        <div class="flex flex-col mb-6">
          <label class="mb-1 text-base tracking-wide text-gray-900"> Password Confirmation:</label>
            <div class="relative">
              <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
                <span>
                  <i class="fas fa-lock text-blue-500"></i>
                </span>
              </div>
              <input class="text-sm placeholder-gray-500 pl-10 pr-4 rounded-xl border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" placeholder="Password confirmation" autocomplete="new-password" type="password" name="user[password_confirmation]" id="user_password_confirmation">
            </div>
        </div>
        <div class="flex justify-between mt-6">
          <a class="px-4 py-3 bg-blue-800 text-gray-200 text-xs font-semibold rounded hover:bg-gray-800" href="/users/sign_in"> Log in </a>
          <%= f.submit "Sign up", class: "px-4 py-3 bg-blue-800 text-gray-200 text-xs font-semibold rounded hover:bg-gray-800" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</body>

<div class="max-w-4xl mx-auto content-center">

  <div>
    <% unless user_signed_in? %>
      <h1>Hello there</h1>
      <p>Sign in or register</p>
      <br>
    <% else %>


      <%= form_tag(search_path, :method => "get") do %>
        <div class="input-group">
          <%= search_field_tag :search, params[:search], placeholder: "Type ", class: "form-controll" %>
          <div class="input-group-dtn">
            <%= button_tag "Search!", :class => "btn btn-info" %>
          </div>
        </div>
      <% end %>

    <% end %>
  </div>

  <div class="flex justify-center flex-wrap">
    <% @selected_posts.each do |post| %>
      <%= render 'posts/post_card', post: post %>
    <% end if user_signed_in? && current_user.being_followeds.any? %>
  </div>
  
  <h1>maybe something new</h1>

  <div class="flex justify-center flex-wrap">
    <% @new_posts.each do |post| %>
      <%= render 'posts/post_card', post: post %>
    <% end %>
  </div>
</div>